{
  "workspaces": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "repository": "https://github.com/finetwork-os/ui",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "dev": "lerna exec --scope=website yarn dev",
    "build-website": "lerna exec --scope=website yarn build",
    "start-website": "lerna exec --scope=website yarn start",
    "build-library": "lerna exec --scope=@finetwork/ui yarn build",
    "publish-library": "lerna exec --scope=@finetwork/ui yarn publish-library"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.3.5"
  }
}
